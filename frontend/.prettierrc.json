{
  "printWidth": 100,
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular",
        "tabWidth": 4
      }
    },
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "tabWidth": 4
      }
    }
  ]
}
